<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">
          <h2 class="topic-author"> <%= topic.user.name %></h2>
          <%= image_tag topic.image.url %>

          <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
          <i class="far fa-heart favorite-active"></i>
          <% end %>

          <%= link_to new_comment_path(topic_id: topic.id, name: "test"), method: :get do %>
          <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
          <p class="topic-text"><%= topic.description %></p>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
